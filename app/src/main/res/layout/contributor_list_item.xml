<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/contributor_layout"
             android:layout_width="match_parent"
             android:layout_height="140dp"
             android:background="@color/white">
    <TextView android:id="@+id/contributor_name"
              style="@style/SingleBlackText"
              android:layout_marginStart="140dp"
              android:layout_marginEnd="20dp"
              android:layout_marginTop="40dp"/>

    <TextView android:id="@+id/contributor_id"
              style="@style/SmallSingleNoteText"
              android:layout_marginStart="140dp"
              android:layout_marginEnd="20dp"
              android:layout_marginBottom="40dp"
              android:layout_gravity="bottom"/>


    <View android:id="@+id/contributor_avatar"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="20dp"
          android:layout_marginStart="20dp"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:background="@color/black"/>
</FrameLayout>